{
  "compilerOptions": {
	"target": "es2016",
	"module": "commonjs",    
	"esModuleInterop": true,
	"forceConsistentCasingInFileNames": true,
	"strict": true,
	"skipLibCheck": true,
	"declaration": true,
	"moduleResolution": "node",
	"baseUrl": ".",
	"rootDir": ".",
    "outDir": "dist",
    "removeComments": true,
	"paths": {
		"@src/*": ["src/*"]
	}
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
}
